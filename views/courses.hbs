<h1>Courses</h1>

{{#if courses.length}}
    <div id="courses">
        {{#each courses}}
            <div class="row">
                <div class="col s12 m7">
                <div class="card">
                    <div class="card-image">
                    <img class="course-img" src="{{img}}">
                    </div>
                    <div class="card-content">
                        <span class="card-title">{{title}}</span>
                        <p class="price">{{price}}</p>
                    </div>
                    <div class="card-action course-actions">
                        <a href="/courses/{{id}}" target="blank">Open the course</a>
                        <a href="/courses/{{id}}/edit?allow=true">Edit the course</a>
                        <form action="/cart/add" method="POST">
                            <input type="hidden" name="course_id" value="{{id}}">
                            <button class="btn" type="submit">Buy</button>
                        </form>
                        <button class="btn js-remove" data-id={{id}}>Remove</button>
                    </div>
                </div>
                </div>
            </div>
        {{/each}}
    </div>
{{else}}
    <p>There courses list is empty</p>
{{/if}}