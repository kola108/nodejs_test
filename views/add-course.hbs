<h1>Add course</h1>
<div class="row">
    <form class="col s12" method="POST" action="/add-course">
      <div class="row">
        <div class="col s12">
          <div class="input-field">
            <input id="title" type="text" class="validate" required name="course_title">
            <label for="title">Title</label>
            <span class="helper-text" data-error="Please write a title"></span>
          </div>

          <div class="input-field">
            <input id="price" type="number" class="validate" required name="course_price">
            <label for="price">Price</label>
            <span class="helper-text" data-error="Please write a price"></span>
          </div>

          <div class="input-field">
            <input id="image" type="text" class="validate" required name="course_image">
            <label for="image">Image</label>
            <span class="helper-text" data-error="Please add an image"></span>
          </div>

          <button class="btn btn-primary">Add cource</button>
        </div>
      </div>
    </form>
  </div>